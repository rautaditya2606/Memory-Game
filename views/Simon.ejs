<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Simon Says Game</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Spicy+Rice&display=swap">
    <style>
        body {
            font-family: "Spicy Rice", serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            margin: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
            padding: 20px;
        }

        h1 {
            color: #ffffff;
            font-size: 3rem;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
            margin-bottom: 10px;
        }

        h4 {
            color: #ffffff;
            font-size: 1.5rem;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
            margin-bottom: 20px;
        }

        .btn-container {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 15px;
            max-width: 90vw;
        }

        .btn {
            height: 120px;
            width: 120px;
            border: 5px solid rgba(255, 255, 255, 0.3);
            border-radius: 20px;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

        .btn:hover {
            transform: scale(1.05);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3);
        }

        .purple { background-color: #22235f; }
        .violet { background-color: #7a4D9F; }
        .pink { background-color: #EB68A0; }
        .green { background-color: #A8DACD; }

        .flash { background-color: white !important; box-shadow: 0 0 20px white; }
        .userflash { background-color: white !important; box-shadow: 0 0 30px #4CAF50; }
        .over { background: linear-gradient(135deg, #ff416c 0%, #ff4b2b 100%); }

        .score {
            height: 40px;
            width: 120px;
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(5px);
            border-radius: 20px;
            position: fixed;
            right: 20px;
            top: 20px;
            text-align: center;
            color: white;
            font-size: 1.2rem;
            line-height: 40px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        @media (max-width: 600px) {
            h1 { font-size: 2rem; }
            h4 { font-size: 1.2rem; }
            .btn { height: 100px; width: 100px; }
        }
    </style>
</head>
<body>
    <h1>Simon Says Game</h1>
    <h4>Tap any box to start</h4>
    <div class="btn-container">
        <div class="btn purple" id="purple"></div>
        <div class="btn violet" id="violet"></div>
        <div class="btn pink" id="pink"></div>
        <div class="btn green" id="green"></div>
    </div>
    <div class="score">Score 0</div>
    <script>
        let h4 = document.querySelector("h4");
        let body = document.body;
        let gameseq = [], userseq = [];
        let btns = ["purple", "violet", "pink", "green"];
        let started = false, level = 0;
        let score = document.querySelector(".score");

        function startGame() {
            if (!started) {
                started = true;
                levelUp();
            }
        }

        function gameFlash(btn) {
            btn.classList.add("flash");
            setTimeout(() => btn.classList.remove("flash"), 100);
        }

        function userFlash(btn) {
            btn.classList.add("userflash");
            setTimeout(() => btn.classList.remove("userflash"), 100);
        }

        function levelUp() {
            userseq = [];
            level++;
            h4.innerText = `Level ${level}`;
            let randColor = btns[Math.floor(Math.random() * 4)];
            gameseq.push(randColor);
            gameFlash(document.querySelector(`#${randColor}`));
            score.innerText = `Score ${level - 1}`;
        }

        function check(index) {
            if (userseq[index] === gameseq[index]) {
                if (userseq.length === gameseq.length) setTimeout(levelUp, 1000);
            } else {
                h4.innerText = "Game Over! Tap any box to start";
                body.classList.add("over");
                setTimeout(() => body.classList.remove("over"), 100);
                resetGame();
            }
        }

        function btnpress() {
            let usercolor = this.id;
            userFlash(this);
            userseq.push(usercolor);
            check(userseq.length - 1);
        }

        document.querySelectorAll(".btn").forEach(btn => {
            btn.addEventListener("click", function() {
                if (!started) {
                    startGame();
                } else {
                    btnpress.call(this);
                }
            });
        });

        function resetGame() {
            started = false;
            level = 0;
            gameseq = [];
            userseq = [];
            score.innerText = "Score 0";
        }
    </script>
</body>
</html>
