<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Simon Says Game</title>
    <link rel="stylesheet" href="simon.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Spicy+Rice&display=swap" rel="stylesheet">
</head>
<body>
    <h1>Simon Say Game</h1>
    <h4>Press any key to start</h4>
    <div class="btn-container">
        <div class="line-one">
            <div class="purple btn" type="button" id="purple"></div>
            <div class="violet btn" type="button" id="violet"></div>
        </div>
        <div class="line-two">
            <div class="pink btn" type="button" id="pink"></div>
            <div class="green btn" type="button" id="green"></div>
        </div>
        <div class="score"></div>
    </div>
    <script src="simon.js"></script>
</body>
<style>
    body {
        font-family: "Spicy Rice", serif;
        font-weight: 300;
        font-style: normal;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        margin: 0;
        padding: 20px;
    }

    h1 {
        text-align: center;
        color: #ffffff;
        font-size: 3.5rem;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        margin-bottom: 10px;
    }

    h4 {
        text-align: center;
        color: #ffffff;
        font-size: 1.5rem;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
        margin-bottom: 30px;
    }

    .btn-container {
        margin: auto;
        justify-content: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 20px;
        max-width: 700px;
    }

    .line-one, .line-two {
        display: flex;
        gap: 20px;
    }

    .purple,
    .violet,
    .pink,
    .green {
        height: 150px;
        width: 150px;
        border: 5px solid rgba(255, 255, 255, 0.3);
        border-radius: 30px;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    }

    .purple:hover,
    .violet:hover,
    .pink:hover,
    .green:hover {
        transform: scale(1.05);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3);
    }

    .purple {
        background-color: #22235f;
    }

    .violet {
        background-color: #7a4D9F;
    }

    .pink {
        background-color: #EB68A0;
    }

    .green {
        background-color: #A8DACD;
    }

    .flash {
        background-color: white !important;
        box-shadow: 0 0 20px white;
    }

    .score {
        height: 40px;
        width: 120px;
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(5px);
        border: 2px solid rgba(255, 255, 255, 0.5);
        border-radius: 20px;
        position: fixed;
        right: 20px;
        top: 20px;
        text-align: center;
        color: white;
        font-size: 1.2rem;
        line-height: 40px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .userflash {
        background-color: white !important;
        box-shadow: 0 0 30px #4CAF50;
    }

    .over {
        background: linear-gradient(135deg, #ff416c 0%, #ff4b2b 100%);
    }

    @media (max-width: 768px) {
        .purple,
        .violet,
        .pink,
        .green {
            height: 120px;
            width: 120px;
        }
        
        h1 {
            font-size: 2.5rem;
        }
        
        h4 {
            font-size: 1.2rem;
        }
    }
</style>
<script>
    let h4 = document.querySelector("h4");
let body=document.querySelector("body")
let gameseq = [];
let userseq = [];
let btns = ["purple", "violet", "pink", "green"];
let started = false;
let level = 0;
document.addEventListener("keypress", function () {
    if (!started) {
        console.log("Game Started");
        started = true;
        levelUp();
    }
});
function gameFlash(btn) {
    btn.classList.add("flash");
    setTimeout(function () {
        btn.classList.remove("flash");
    }, 100);
}
function userFlash(btn) {
    btn.classList.add("userflash");
    setTimeout(function () {
        btn.classList.remove("userflash");
    }, 100);
}
function levelUp() {
    userseq = []; 
    level++;
    h4.innerText = `Level ${level}`;
    let randIdx = Math.floor(Math.random() * 4);
    let randColor = btns[randIdx];
    gameseq.push(randColor);
    console.log(gameseq);
    let randBtn = document.querySelector(`.${randColor}`);
    gameFlash(randBtn);
    score.innerText = `Score ${level-1}`;
}
function check(index) {
    console.log(`Current Level ${level}`);
    if (userseq[index] === gameseq[index]) {
        console.log("Correct choice!");
        if (userseq.length === gameseq.length) {
            setTimeout(levelUp, 1000);
        }
    } else {
        h4.innerText = `Game Over!  \n Press any key to Start`;
        body.classList.add("over")
        setTimeout(function(){
            body.classList.remove("over")
        },100);
        resetGame();
    }
}
function btnpress() {
    let btn = this; 
    userFlash(btn);
    let usercolor = btn.getAttribute("id"); 
    userseq.push(usercolor); 
    check(userseq.length - 1); 
}
let allbtns = document.querySelectorAll(".btn");

for (let btn of allbtns) {
    btn.addEventListener("click", btnpress);
}
function resetGame() {
    started = false;
    level = 0;
    gameseq = [];
    userseq = [];
    h4.innerText = "!!Game Over !! \n  Press any key to start"; 
    score.innerText = `Score ${level}`;
}
let score=document.querySelector(".score")
</script>
</html>